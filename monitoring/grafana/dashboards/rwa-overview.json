{
  "dashboard": {
    "id": null,
    "uid": "rwa-overview",
    "title": "RWA Platform Overview",
    "tags": ["rwa", "overview"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "API Request Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Response Time (p95)",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Response Time",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "type": "stat",
        "title": "Total Users",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rwa_users_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "type": "stat",
        "title": "Total Assets",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rwa_assets_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        },
        "type": "stat",
        "title": "Total Transactions",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rwa_transactions_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "type": "graph",
        "title": "Database Connections",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"rwa_db\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "type": "graph",
        "title": "Redis Memory Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Memory Used",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "type": "table",
        "title": "Recent Errors",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "increase(http_requests_total{status=~\"5..\"}[1h])",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}