# Backend Environment Variables

# Node Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://rwa_user:rwa_password@localhost:5432/rwa_db

# Redis
REDIS_URL=redis://:rwa_redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=rwa_redis_password

# JWT Secrets (Change these in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_change_this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Blockchain RPC
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=31337

# API Keys (for production)
ALCHEMY_API_KEY=
INFURA_API_KEY=
ETHERSCAN_API_KEY=

# Email Configuration (optional)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@rwa.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf